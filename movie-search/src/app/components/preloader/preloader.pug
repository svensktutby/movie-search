//- All mixins in this file should initiate with the name of the block (preloader)

mixin preloader(mods, text)

  //- Accept:
  //-   mods  {string} - modifiers list
  //-   text  {string} - text
  //- Invoke:
        +preloader()

  -
    // modifiers list
    let allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      const modsList = mods.split(',');
      for (let i = 0; i < modsList.length; i++) {
        allMods = allMods + ' preloader--' + modsList[i].trim();
      }
    }

  .preloader(class=allMods)&attributes(attributes)
    - let n = 3
    - for (let i = 0; i < n; i++)
      .preloader__circle
    - for (let i = 0; i < n; i++)
      .preloader__shadow
    if text
      span.preloader__text= text
